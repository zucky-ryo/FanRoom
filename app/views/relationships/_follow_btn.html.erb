<% if current_user.following?(user) %>
  <%# 既にフォローしているユーザーのページを表示した時 %>
  <%= link_to '', simple_chat_private_rooms_path(user.id), method: :post, data: { confirm: "#{user.nickname}さんにチャットを送信します" }, class: "far fa-envelope simple-chat-btn", id: "simple-chat-button" %>
  <%= link_to 'フォロー解除', relationship_path(user.id), method: :delete, data: { confirm: "#{user.nickname}さんのフォローを解除します" }, class: "unfollow-btn", id: "unfollow-button", remote: true %>
  <%= link_to 'フォローする', relationships_path(user.id), method: :post, class: "follow-reverse", id: "follow-button", remote: true %>
<% else %>
  <%# フォローしていないユーザーのページを表示した時 %>
  <%= link_to '', simple_chat_private_rooms_path(user.id), method: :post, data: { confirm: "#{user.nickname}さんにチャットを送信します" }, class: "far fa-envelope simple-chat-reverse", id: "simple-chat-button" %>
  <%= link_to 'フォローする', relationships_path(user.id), method: :post, class: "follow-btn", id: "follow-button", remote: true %>
  <%= link_to 'フォロー解除', relationship_path(user.id), method: :delete, data: { confirm: "#{user.nickname}さんのフォローを解除します" }, class: "unfollow-reverse", id: "unfollow-button", remote: true %>
<% end %>