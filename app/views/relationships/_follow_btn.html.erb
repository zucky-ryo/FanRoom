<% if current_user.following?(user) %>
  <%= link_to 'フォロー解除', relationship_path(user.id), method: :delete, data: { confirm: "#{user.nickname}さんのフォローを解除します" }, class: "unfollow-btn", id: "unfollow-button", remote: true %>
  <%= link_to 'フォローする', relationships_path(user.id), method: :post, class: "follow-reverse", id: "follow-none", remote: true %>
<% else %>
  <%= link_to 'フォローする', relationships_path(user.id), method: :post, class: "follow-btn", id: "follow-button", remote: true %>
  <%= link_to 'フォロー解除', relationship_path(user.id), method: :delete, data: { confirm: "#{user.nickname}さんのフォローを解除します" }, class: "unfollow-reverse", id: "unfollow-none", remote: true %>
<% end %>