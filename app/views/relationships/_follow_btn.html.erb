<% if current_user.following?(user) %>
  <%= form_with model: current_user.relationships.find(follow_id: user.id), method: :delete do |f| %>
    <%= hidden_field_tag :follow_id, user.id %>
    <%= f.submit "フォロー解除", class: "unfollow-btn" %>
  <% end %>
<% else %>
  <%= form_with model: current_user.relationships.build do |f| %>
    <%= hidden_field_tag :follow_id, user.id %>
    <%= f.submit "フォローする", class: "follow-btn" %>
  <% end %>
<% end %>